{
  "name": "export-design-tokens",
  "version": "1.0.0",
  "description": "自分のFigmaプラグイン",
  "main": "dist/code.js",
  "scripts": {
    "type-check": "tsc ",
    "build": "node build.mjs",
    "build:dev": "npm run typecheck && node build.mjs --dev",
    "watch": "node build.mjs --dev --watch",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules Export Design Tokens",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix Export Design Tokens",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "0.25.9",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended",
      "prettier"
    ],
    "plugin": [
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "prettier/prettier": "error"
    },
    "overrides": [
      {
        "files": [
          "build.mjs"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
